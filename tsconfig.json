{
    "compilerOptions": {
        "incremental": true,
        "target": "ESNEXT",
        "module": "ESNEXT",
        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true ,
        "noImplicitReturns": true ,
        "noFallthroughCasesInSwitch": true ,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true ,
        "noUncheckedIndexedAccess": true,
        "pretty": true,
        "outDir": "build"
    },
    "include": ["src/", "src/type/.d.ts", "src/type/.d.ts"],
    "exclude": ["node_modules"]
}
